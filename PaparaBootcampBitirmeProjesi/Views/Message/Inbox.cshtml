@using PaparaBootcampBitirmeProjesi.BLL.Models.MessageDTO

@model List<GetInboxMessagesDTO>
@{
    ViewData["Title"] = "Gelen Mesajlar";
    int count = 0;
}
<h1>Gelen Mesajlar</h1>

<table class="table table-bordered"
    <tr>
        <th>#</th>
        <th>Gönderen</th>
        <th>Konu</th>
        <th>Tarih</th>
        <th>Sil</th>
        <th>Mesajı Aç</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <th>@count</th>
            <th>@item.SenderMail</th>
            <th>@item.Subject</th>
            <th>@item.CreationDate</th>
            <th><a asp-action="DeleteMessage" asp-controller="Message" asp-route-id="@item.MessageId" type="submit" class="btn btn-primary" onclick="return confirm('Daire sakinini silmek istediğinize emin misiniz?')">Sil</a></th>
            <th>Mesajı Aç</th>
        </tr>
    }
</table>

