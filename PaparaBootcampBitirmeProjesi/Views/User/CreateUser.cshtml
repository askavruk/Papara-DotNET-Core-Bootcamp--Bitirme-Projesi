@{
    Layout = "_Layout";
}

@using PaparaBootcampBitirmeProjesi.BLL.Models.UserDTO

@model CreateUserDTO

<div class="text-danger" asp-validation-summary="All"></div>
<div class="card card-primary">
    <div class="card-header">
        <h3 class="card-title">Create Company</h3>
    </div>
    <!-- /.card-header -->
    <!-- form start -->
    <form method="post" asp-action="CreateUser">
        <div class="card-body">
            <div class="form-group">
                <label asp-for="FirstName">İsim</label>
                <input asp-for="FirstName" type="text" class="form-control" placeholder="İsim">
            </div>
            <div class="form-group">
                <label asp-for="SecondName" class="control-label">İkinci İsim</label>
                <input asp-for="SecondName" type="text" class="form-control" placeholder="İkinci İsim" />
            </div>
            <div class="form-group">
                <label asp-for="LastName" class="control-label">Soyisim</label>
                <input asp-for="LastName" type="text" class="form-control" placeholder="Soyisim" />
            </div>
            <div class="form-group">
                <label asp-for="IdentityNumber" class="control-label">TC Kimlik No</label>
                <input asp-for="IdentityNumber" type="text" class="form-control" placeholder="TC Kimlik No" />
            </div>
            <div class="form-group">
                <label asp-for="PhoneNumber" class="control-label">Phone</label>
                <input asp-for="PhoneNumber" type="text" class="form-control" placeholder="Telefon Numarası" />
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label">Email</label>
                <input asp-for="Email" type="email" class="form-control" placeholder="E-Mail" />
            </div>
            <div class="form-group">
                <label asp-for="Apartment.Block" class="control-label">Blok</label>
                <input asp-for="Apartment.Block" type="text" class="form-control" placeholder="Blok" />
            </div>
            <div class="form-group">
                <label asp-for="Apartment.Floor" class="control-label">Kat</label>
                <input asp-for="Apartment.Floor" type="text" class="form-control" placeholder="Kat" />
            </div>
            <div class="form-group">
                <label asp-for="Apartment.ApartmentNo" class="control-label">Daire No</label>
                <input asp-for="Apartment.ApartmentNo" type="text" class="form-control" placeholder="Daire No" />
            </div>
            <div class="form-group">
                <label asp-for="Apartment.Type" class="control-label">Daire Tipi</label>
                <input asp-for="Apartment.Type" type="text" class="form-control" placeholder="Daire Tipi" />
            </div>

        </div>
        <!-- /.card-body -->

        <div class="card-footer">
            <button type="submit" class="btn btn-primary">Ekle</button>
        </div>
    </form>
</div>